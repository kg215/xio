{
    "compilerOptions": {
        "lib": ["es2017", "dom"],
        "experimentalDecorators": true,
        "rootDir": ".",
        "outDir": "static",
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "noImplicitAny": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl":".",
        "paths": {
            "*": [
                "./node_modules/@types",
                "./src/types/*"
            ]
       }
    }
}